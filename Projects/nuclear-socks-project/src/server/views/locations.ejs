<!DOCTYPE html>
<html lang="en">

<head>
    <title>Socks Panel</title>
    <script src="/app.js" defer></script>
    <%- include('./partials/head') %>
</head>

<body>
    <%- include('./partials/nav'); %>

        <div class="container-fluid">
            <div class="row">
                <%- include('./partials/left-nav')%>

                    <div class="col-md-9 pad-top-10">
                        <ul class="breadcrumb">
                            <li>
                                <a href="/"><span class="glyphicon glyphicon-home"></span> Home</a>
                            </li>
                            <li>Locations</li>
                        </ul>

                        <!--Popular-->
                        <div class="panel panel-default">
                            <div class="panel-heading">Locations</div>
                            <div class="panel-content">
                                <table id="dtable" class="table">
                                    <tr>
                                        <td>
                                            <span class="label label-info">
                                                id
                                            </span>
                                        </td>
                                        <td>
                                            <span>
                                                Base name
                                            </span>
                                        </td>
                                        <td>
                                            Nearest city
                                        </td>
                                        <td>
                                            <span>
                                                Latitude
                                            </span>
                                        </td>
                                        <td>
                                            <span>
                                                Longitude
                                            </span>
                                        </td>
                                    </tr>
                                    <% locations.forEach(location=> { %>

                                        <tr>
                                            <td>
                                                <span class="label label-info">
                                                    <%= location.id%>
                                                </span>
                                                <br>
                                                <div class="buttons"
                                                    style="display: flex; justify-content: center; gap: 4px; font-size: small;">
                                                    <a href="/edit/location/<%= location.id%>">edit</a>
                                                    <a style="cursor: pointer;"
                                                        onclick="deleteItem('location', '<%= location.id%>', event)">delete</a>
                                                </div>
                                            </td>
                                            <td>
                                                <span>
                                                    <%= location.base_name %>
                                                </span>
                                            </td>
                                            <td>
                                                <span>
                                                    <%= location.nearest_city %>
                                                </span>
                                            </td>
                                            <td>
                                                <span>
                                                    <%= location.lat %>
                                                </span>
                                            </td>
                                            <td>
                                                <%= location.lon %>
                                            </td>
                                        </tr>

                                        <% })%>
                                            <% if (pages!=1) {%>
                                                <tr style="border-top: none;">
                                                    <td colspan="2" style="border-top: none;">
                                                        <ul class="pagination">
                                                            <% Array(pages).fill(1).forEach((_,i)=>{ %>
                                                                <% if (i+1==curr_page){ %>
                                                                    <li class="active"><a href="">
                                                                            <%= i+1%>
                                                                        </a></li>

                                                                    <% } else{ %>
                                                                        <li><a href="/locations?page=<%= i+1%>">
                                                                                <%= i+1%>
                                                                            </a></li>
                                                                        <%}})%>
                                                        </ul>
                                                    </td>
                                                </tr>
                                                <% } %>
                                </table>
                            </div>
                        </div>
                        <!--End Popular-->
                    </div>
            </div>
        </div>
</body>

</html>